<UserControl
    x:Class="LongTextScrollerPlugin.PropertyEditor.PluginInfoButton.PluginInfoButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:YukkuriMovieMaker.Controls;assembly=YukkuriMovieMaker.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LongTextScrollerPlugin.PropertyEditor.PluginInfoButton"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type={x:Type local:PluginInfoButtonViewModel}}"
    d:DesignHeight="26"
    d:DesignWidth="130"
    mc:Ignorable="d">
    <Button
        Background="Transparent"
        BorderThickness="0"
        Command="{Binding ShowPluginInfoDialogCommand}"
        ToolTip="このプラグインについて">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Grid Margin="0,0,3,0">
                        <Ellipse
                            Width="18"
                            Height="18"
                            Fill="Transparent"
                            Stroke="{TemplateBinding BorderBrush}"
                            StrokeThickness="{TemplateBinding BorderThickness}" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="i" />
                    </Grid>

                    <TextBlock VerticalAlignment="Center" Text="このプラグインについて">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextDecorations" Value="{x:Null}" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="TextDecorations" Value="Underline" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
